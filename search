try:
  from googlesearch import search
except ImportError:
  print("No module named 'google' found")
  
import requests
from bs4 import BeautifulSoup


query = input("Lyrics: ")

def ten_urls(lyrics):
  results = []

  # now searching
  for url in search(lyrics, tld="com", num=10, stop=10, pause=2):
    results.append(url)
    
  return results


def search_web(urls):
# look for "genius" in results
  for link in urls:
    if "genius" in link:
      return link
    
  return None

def find_title(url):
  page = requests.get(url)
  soup = BeautifulSoup(page.content, 'html.parser')
  title = soup.select('h1.header_with_cover_art-primary_info-title')[0].text.strip()
  return title

song_title = find_title(search_web(ten_urls(query)))
print(song_title)
print("------Done Searching------")